    "version": "0.2.0",
    "configurations": [
        {
            "name": "C++ Build and Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/spc",
            "args": ["data/20230428.csv", "data/20230430.csv", "data/20230501.csv"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build"
        }

    ]
}